<div id="cart-drawer" class="cart-drawer inactive">
  <div class="cart-background"></div>
  <div class="cart-product">
    <h2>Your cart</h2>
    <div class="">
      {% form 'cart'
        , cart %}
        {% if cart.items.size > 0 %}
          {% for item in cart.items %}
            <div class="product-grid">
              {{ item.image | image_url: width: 200 | image_tag }}
              <div class="item-title">{{ item.title }}</div>
              <div class="item-price">{{ item.price | money }}</div>
              <input
                type="number"
                class="item-quantity"
                value={{ item.quantity }}>
              <a href="{{ item.url_to_remove }}">Remove</a>
            </div>
          {% endfor %}
        {% else %}
          <div class="cart-empty">Your cart is empty</div>
        {% endif %}

        <hr>

        <div class="cart-total">Total price: {{ cart.total_price | money }}</div>

        <input
          type="submit"
          name="checkout"
          value="Checkout">
      {% endform %}
    </div>
  </div>
</div>



<script>
    var cart = document.querySelector('.cart-product')

    cart.addEventListener('click', (e) => {
      e.stopPropagation()
    })
</script>